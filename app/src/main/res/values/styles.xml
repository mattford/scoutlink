<resources>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <style name="DarkDrawer">
        <item name="android:background">@color/scoutlink_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="UnreadMessagesBadge">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/unread_messages_badge</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/scoutlink_blue_dark</item>
        <item name="colorPrimary">@color/scoutlink_blue</item>
        <item name="colorAccent">@color/scoutlink_orange</item>
    </style>
    <style name="Dialog" parent="Dialog.Base">

    </style>
    <style name="DialogNoActionBar" parent="Dialog.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme.Base" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/scoutlink_blue_dark</item>
        <item name="colorPrimary">@color/scoutlink_blue</item>
        <item name="colorAccent">@color/scoutlink_orange</item>
    </style>

    <style name="Dialog.Base" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorPrimaryDark">@color/scoutlink_blue_dark</item>
        <item name="colorPrimary">@color/scoutlink_blue</item>
        <item name="colorAccent">@color/scoutlink_orange</item>
        <item name="android:windowNoTitle">false</item>
    </style>

</resources>
